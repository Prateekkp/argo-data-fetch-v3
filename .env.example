# ARGO Data Processing - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Connection
DB_HOST=localhost
DB_NAME=argo_index
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_PORT=5432

# Database Table Settings
TABLE_NAME=argo_index_testing_2

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Performance Settings
MAX_DB_WORKERS=12

# Data Processing Settings
DOWNLOAD_TIMEOUT=30
MAX_CONCURRENT_DOWNLOADS=10

# File Paths (leave empty to use defaults)
ARGO_INDEX_DIR=
ARGO_DATA_DIR=
PROCESSED_DATA_DIR=